<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".activities.TodoListWidgetDialogActivity">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_widget_dialog_instructions"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:text="Task Done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:id="@+id/button"
                android:layout_marginRight="4dp"
                android:onClick="taskDone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/tv_widget_dialog_instructions"/>

        <Button
                android:text="Edit task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:layout_marginLeft="4dp"
                android:id="@+id/button2"
                android:onClick="editTask"
                app:layout_constraintStart_toEndOf="@id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_widget_dialog_instructions"/>

    </android.support.constraint.ConstraintLayout>
</layout>